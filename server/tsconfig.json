{
    "compilerOptions": {
        "module":"NodeNext",
        "target":"ES2020",
        "outDir":"dist",
        "sourceMap": true,
        "moduleResolution": "nodenext",
        "baseUrl": "./src",
        "paths": {
            "@/resources/*": ["resources/*"],
            "@/utils/*": ["utils/*"],
            "@/middleware/*": ["middleware/*"]
        },
    },
    "include": [
        "src/**/*"
    ]
}